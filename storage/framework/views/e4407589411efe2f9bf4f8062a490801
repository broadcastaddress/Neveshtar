      <div class="container">
			<div class="col-md-6 col-sm-6">
			<!-- Start Currency -->
			<div class="portlet">
				<div class="portlet-title">
					<div class="caption">
						<i class="fa fa-dollar"></i> <?php echo e(Lang::get('site.currency_rates')); ?>

					</div>
				</div>
				<div class="portlet-body">
					<div class="table-scrollable">
						<table class="table table-striped table-bordered table-advance table-hover">
						<thead>
						<tr>
							<th width="30%">
								<i class="fa"></i> <?php echo e(Lang::get('site.currency')); ?>

							</th>
							<th width="20%">
								<i class="fa"></i> <?php echo e(Lang::get('site.buy_price')); ?>

							</th>
							<th width="15%">
								<i class="fa"></i> <?php echo e(Lang::get('site.buy_difference')); ?>

							</th>
							<th width="20%">
								<i class="fa"></i> <?php echo e(Lang::get('site.sell_price')); ?>

							</th>
							<th width="15%">
								<i class="fa"></i> <?php echo e(Lang::get('site.sell_difference')); ?>

							</th>
						</tr>
						</thead>
						<tbody>
						<?php foreach($currencies as $currency): ?>
						<tr>
							<td class="highlight"><?php echo e($currency->name); ?></td>
							<?php $i = 0; ?>
							<?php foreach($currency->latest_data as $latest_data): ?>
							<?php $i++; ?>
							<?php if($i == 1): ?>
								<td><?php echo e(str_replace(".00", "", (string)number_format ($latest_data->buy_price, 2, ".", ","))); ?></td>
							<?php else: ?>
								<?php
								$bd = $latest_data->buy_price - $currency->latest_data->first()->buy_price;
								?>
								<?php if($bd > 0): ?>
								<td><i class="fa fa-arrow-up font-green"></i> <?php echo e($bd); ?></td>
								<?php elseif($bd == 0): ?>
								<td>-</td>
								<?php else: ?>
								<td><i class="fa fa-arrow-down font-red"></i> <?php echo e(abs($bd)); ?></td>
								<?php endif; ?>
							<?php endif; ?>
							<?php endforeach; ?>

							<?php $i = 0; ?>
							<?php foreach($currency->latest_data as $latest_data): ?>
							<?php $i++; ?>
							<?php if($i == 1): ?>
								<td><?php echo e(str_replace(".00", "", (string)number_format ($latest_data->sell_price, 2, ".", ","))); ?></td>
							<?php else: ?>
								<?php
								$sd = $latest_data->sell_price - $currency->latest_data->first()->sell_price;
								?>
								<?php if($sd > 0): ?>
								<td><i class="fa fa-arrow-up font-green"></i> <?php echo e($sd); ?></td>
								<?php elseif($sd == 0): ?>
								<td>-</td>
								<?php else: ?>
								<td><i class="fa fa-arrow-down font-red"></i> <?php echo e(abs($sd)); ?></td>
								<?php endif; ?>
							<?php endif; ?>
							<?php endforeach; ?>

						</tr>
						<?php endforeach; ?>
						</tbody>
						</table>
					</div>
