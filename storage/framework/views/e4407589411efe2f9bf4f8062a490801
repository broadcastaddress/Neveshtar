							<td class="highlight"><?php echo e($currency->name); ?></td>
							<?php $i = 0; ?>
							<?php foreach($currency->latest_data as $latest_data): ?>
							<?php $i++; ?>
							<?php if($i == 1): ?>
								<td><?php echo e($latest_data->buy_price); ?></td>
							<?php else: ?>
								<?php
								$bd = $latest_data->buy_price - $currency->latest_data->first()->buy_price;
								?>
								<?php if($bd > 0): ?>
								<td><i class="fa fa-arrow-up font-green"></i> <?php echo e($bd); ?></td>
								<?php elseif($bd == 0): ?>
								<td>-</td>
								<?php else: ?>
								<td><i class="fa fa-arrow-down font-red"></i> <?php echo e(abs($bd)); ?></td>
								<?php endif; ?>
							<?php endif; ?>
							<?php endforeach; ?>

							<?php $i = 0; ?>
							<?php foreach($currency->latest_data as $latest_data): ?>
							<?php $i++; ?>
							<?php if($i == 1): ?>
								<td><?php echo e($latest_data->sell_price); ?></td>
							<?php else: ?>
								<?php
								$sd = $latest_data->sell_price - $currency->latest_data->first()->sell_price;
								?>
								<?php if($sd > 0): ?>
								<td><i class="fa fa-arrow-up font-green"></i> <?php echo e($sd); ?></td>
								<?php elseif($sd == 0): ?>
								<td>-</td>
								<?php else: ?>
								<td><i class="fa fa-arrow-down font-red"></i> <?php echo e(abs($sd)); ?></td>
								<?php endif; ?>
							<?php endif; ?>
